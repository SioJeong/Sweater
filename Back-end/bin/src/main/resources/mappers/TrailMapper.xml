<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.sweater.model.dao.TrailDao">
	
	<select id="selectAll" resultType="string" parameterType="string">
		SELECT m.map_id, m.user_id, r.point_order, r.latitude, r.longitude, r.content, r.dist
		FROM map m, route r
		WHERE m.map_id = r.map_id;
	</select>
	
	<select id="getTrailId" resultType="int" parameterType="string">
		SELECT MAX(map_id)
		FROM map
		WHERE user_id = #{userId};
	</select>
	
	<insert id="insertTrail" parameterType="string">
		INSERT INTO map (user_id)
		VALUES(userId)
	</insert>
	
	<insert id="insertRoute" parameterType="map">
		INSERT INTO map
		VALUES(#{mapId}, #{pointOrder}, #{latitude}, #{longitude}, #{content}, #{dist})
	</insert>
	
	<delete id="deleteTrail" parameterType="int">>
		DELETE FROM map
		WHERE map_id = #{mapId}
	</delete>
	
</mapper>